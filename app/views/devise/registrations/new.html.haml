%h2 Sign up for an account
= semantic_form_for resource, as: resource_name, url: registration_path(resource_name) do |f|
  = f.inputs do
    = f.input :username, input_html: { placeholder: "mal" }
    = f.input :email, hint: "mal@firefly.com", input_html: { placeholder: "mal@firefly.com" }
    = f.input :password, hint: "Has to be at least 6 characters"
    = f.input :password_confirmation
  = f.buttons do
    = f.commit_button label: "Sign up"
= render :partial => "devise/shared/links"
